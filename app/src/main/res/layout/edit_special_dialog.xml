<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="600sp"
    android:minHeight="150dp"
    android:layout_marginStart="0sp" android:layout_marginEnd="0sp"
    android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="20sp"
            android:text="@string/info_especiales"
            android:background="@color/red"
            android:textColor="@color/white"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <EditText
                    android:enabled="false"
                    android:id="@+id/edit_especial_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:hint="@string/nombre"
                    android:layout_marginTop="10dp"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content">
                <EditText
                    android:enabled="false"
                    android:id="@+id/edit_especial_porciento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/espcial_porciento"
                    android:layout_marginTop="10dp"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/texto_tipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tipo_especial"
                        android:textSize="25sp"/>

                    <RadioGroup
                        android:id="@+id/edit_radiogroup"
                        android:visibility="gone"
                        android:layout_marginStart="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/edit_especial_atracciones_rb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/atracciones"
                            android:clickable="false"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/productos"
                            android:id="@+id/edit_especial_productos_rb"
                            android:clickable="false"/>
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/edit_tipo_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:visibility="gone"
                        android:id="@+id/edit_add_product_especiales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/agregar"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/productos_aplicados"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <ListView
                        android:clickable="false"
                        android:id="@+id/edit_productos_agregados"
                        android:layout_width="250dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:enabled="false"
                                android:id="@+id/edit_fecha_inicio_especial"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/fecha_inicio"/>

                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:enabled="false"
                                android:id="@+id/edit_fecha_fin_especial"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/fecha_fin"/>

                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="end">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/edit_especial_button"
                            android:text="@string/editar_empleado"
                            android:layout_marginTop="30dp"
                            android:background="#ffff"
                            android:textColor="@color/colorAccent"/>

                        <Button
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/accept_especial_button"
                            android:text="@string/editar_empleado"
                            android:layout_marginTop="30dp"
                            android:background="#ffff"
                            android:textColor="@color/colorAccent"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/delete_especial_button"
                            android:text="@string/borrar_empleado"
                            android:layout_marginTop="30dp"
                            android:background="#ffff"
                            android:textColor="@color/colorAccent"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
</LinearLayout>