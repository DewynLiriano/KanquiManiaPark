<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="650sp"
    android:minHeight="300dp"
    android:layout_marginStart="0sp" android:layout_marginEnd="0sp"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:text="@string/info_cliente"
        android:background="@color/red"
        android:textColor="@color/white"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="10sp">

        <ImageView
            android:id="@+id/facturacion_client_dialog_foto"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/ic_account_black_48dp"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="id del panita"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:id="@+id/facturacion_client_dialog_id"/>
        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/facturacion_client_dialog_name"
                android:hint="nombre del pana"
                android:textColor="@color/black"
                android:textSize="25sp"/>

        </LinearLayout>

        </LinearLayout>

    <TextView
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccione_tipo_ticket"
        android:textSize="25sp"/>

        <Spinner
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/facturacion_client_dialog_tickets_spinner"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end">

        <Button
            android:id="@+id/facturacion_client_cancelar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:text="@string/cancelar"
            android:background="@color/white"
            android:textColor="@color/colorAccent"/>

        <Button
            android:id="@+id/facturacion_client_aceptar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:text="@string/aceptar"
            android:background="@color/white"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

</LinearLayout>